<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<%= form_with model:@customer, url:admin_customer_path(@customer.id), local:true do |f| %>
  <div>
    <div>
      <%= f.label :"会員ID" %>
      <%= @customer.id %>
    </div>

    <%= render 'layouts/customer_form', f: f %>

    <div>
      <%= f.label :"会員ステータス" %>
      <%= f.radio_button :is_active, Customer.is_actives.key(true) %>
      <%= f.label :is_active, Customer.is_actives_i18n[:enable] %>
      <%= f.radio_button :is_active, Customer.is_actives.key(false) %>
      <%= f.label :is_active, Customer.is_actives_i18n[:disable] %>
    </div>
  </div>

  <%= f.submit "変更を保存" %>
<% end %>