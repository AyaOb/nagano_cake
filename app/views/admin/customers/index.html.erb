<div class="container">
  <div class="row">
    <h4 class="bg-light">会員一覧</h4>
  </div>
  <div class="row">
    <table>
      <thead class="bg-light border-top border-bottom border-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr class="border-bottom border-light">
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %>
                <%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td><%= customer.is_active_i18n %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>