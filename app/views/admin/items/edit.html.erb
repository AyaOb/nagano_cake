<h2>商品編集</h2>
<%= form_with model:@item, url:admin_item_path(@item.id), local:true do |f| %>
  <div>
    <%= f.label :"商品画像" %>
    <%= f.attachment_field :image %>
  </div>

  <div>
    <%= f.label :"商品名" %>
    <%= f.text_field :name, :placeholder => "商品名" %>
  </div>

  <div>
    <%= f.label :"商品説明" %>
    <%= f.text_area :introduction, :placeholder => "ここに説明文を記述します" %>
  </div>

  <div>
    <%= f.label :"ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択してください --" %>
  </div>

  <div>
    <%= f.label :"税抜価格" %>
    <%= f.text_field :price, :placeholder => "1000" %>
    <%= f.label :"円" %>
  </div>

  <div>
    <%= f.label :"販売ステータス" %>
    <%= f.radio_button :is_active, :"販売中", checked: true %>
    <%= f.label :"販売中" %>
    <%= f.radio_button :is_active, :"売切れ" %>
    <%= f.label :"売切れ" %>
  </div>

  <%= f.submit :"変更を" %>
<% end %>