<div class="container">
  <div class="row pl-5">
    <h4 class="bg-light">商品編集</h4>
  </div>
  <div class="row">
    <%= form_with model:@item, url:admin_item_path(@item.id), local:true do |f| %>
      <%= render 'admin/shared/item_form', f: f %>
      <div class="mt-2 pl-5 ml-5">
        <%= f.submit :"変更を保存", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>