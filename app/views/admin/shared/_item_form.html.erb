  <div>
    <%= f.label :"商品画像" %>
    <%= f.attachment_field :image %>
  </div>

  <div>
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, :placeholder => "商品名" %>
  </div>

  <div>
    <%= f.label :introduction, "商品説明" %>
    <%= f.text_area :introduction, :placeholder => "ここに説明文を記述します" %>
  </div>

  <div>
    <%= f.label :"ジャンル" %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択してください --" %>
  </div>

  <div>
    <%= f.label :price, "税抜価格" %>
    <%= f.text_field :price, :placeholder => "1000" %> 円
  </div>

  <div>
    <%= f.label :"販売ステータス" %>
    <%= f.radio_button :is_active, Item.is_actives.key(true), checked: true %>
    <%= f.label :is_active, Item.is_actives_i18n[:on_sale] %>
    <%= f.radio_button :is_active, Item.is_actives.key(false) %>
    <%= f.label :is_active, Item.is_actives_i18n[:sold_out] %>
  </div>
