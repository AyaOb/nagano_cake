<table>
  <tr>
    <td><%= f.label :"商品画像" %></td>
    <td><%= f.attachment_field :image %></td>
  </tr>
    <tr>
    <td><%= f.label :name, "商品名" %></td>
    <td><%= f.text_field :name, :placeholder => "商品名" %></td>
  </tr>
    <tr>
    <td><%= f.label :introduction, "商品説明" %></td>
    <td><%= f.text_area :introduction, :placeholder => "ここに説明文を記述します" %></td>
  </tr>
    <tr>
    <td><%= f.label :"ジャンル" %></td>
    <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択してください --" %></td>
  </tr>
    <tr>
    <td><%= f.label :price, "税抜価格" %></td>
    <td><%= f.text_field :price, :placeholder => "1000" %> 円</td>
  </tr>
    <tr>
    <td><%= f.label :"販売ステータス" %></td>
    <td>
      <%= f.radio_button :is_active, Item.is_actives.key(true), checked: true %>
      <%= f.label :is_active, Item.is_actives_i18n[:on_sale] %>
      <%= f.radio_button :is_active, Item.is_actives.key(false) %>
      <%= f.label :is_active, Item.is_actives_i18n[:sold_out] %>
    </td>
  </tr>
</table>