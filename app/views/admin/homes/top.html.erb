<div class="container">
  <div class="row">
    <div class="col-10">
      <h4 class="col-3 bg-light text-center">注文履歴一覧</h4>
      <table>
        <thead>
          <tr class=" bg-light">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order.id) do %>
                  <%= l order.created_at, format: :default %>
                <% end %>
              </td>
              <td><%= order.customer.last_name %> <%= order.customer.first_name %></td>
              <td>
                <% order.order_details.each do |order_detail| %>
                  <% @amount += order_detail.amount %>
                <% end %>
                <%= @amount %></td>
              <td><%= order.status_i18n %></td>
            </tr>
            <%  @amount = 0 %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
