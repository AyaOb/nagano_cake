<div class="container">
  <div class="row">
    <div class="col-12 px-5">
      <h4 class="col-3 bg-light">管理者ログイン</h4>
      <%= form_with model:@admin, url:admin_session_path, local:true do |f| %>
        <div class="field">
          <div class="row">
            <div class="col-2 ml-5 mr-2">
              <%= f.label :"メールアドレス" %>
            </div>
            <div class="col-4">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class="row mt-3">
            <div class="col-2 ml-5 mr-2">
              <%= f.label :"パスワード" %>
            </div>
            <div class="col-4">
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          </div>
        </div>

        <div class="row mt-4">
          <div class="col-2 ml-5 mr-2"></div>
          <div class="col-4">
            <%= f.submit "ログイン", class: 'btn btn-primary' %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

