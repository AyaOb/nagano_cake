<div class="container">
  <div class="row">
    <h4 class="bg-light">ジャンル一覧・追加</h4>
  </div>
  <div class="row">
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
      <table>
        <tr>
          <td><%= f.label :"ジャンル名" %></td>
          <td><%= f.text_field :name, :placeholder => "ジャンル名" %></td>
          <td><%= f.submit "新規登録", class: 'btn btn-success' %></td>
        </tr>
      </table>
    <% end %>
  </div>
  <div class="row mt-5">
    <table>
      <thead class="bg-light border-top border-bottom">
        <tr>
          <th class="align-middle">ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr class="border-bottom">
            <td><%= genre.name %></td>
            <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>




