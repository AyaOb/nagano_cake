<div class="container">
  <div class="row">
    <h4 class="bg-light">ジャンル編集</h4>
  </div>
  <div class="row">
    <%= form_with model: @genre, url: admin_genre_path(@genre.id), local: true do |f| %>
      <table>
        <tr>
          <td><%= f.label :name, "ジャンル名" %></td>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit "変更を保存", class: 'btn btn-success' %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>