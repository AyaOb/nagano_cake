<h4>注文履歴詳細</h4>
<table>
  <tbody>
    <tr>
      <th>購入者</th>
      <td>
        <%= link_to admin_customer_path(@order.customer_id) do %>
          <%= @order.customer.last_name %><%= @order.customer.first_name %>
        <% end %>
      </td>
    </tr>
     <tr>
      <th>注文日</th>
      <td><%= l @order.created_at, format: :short %></td>
    </tr>
     <tr>
      <th>配送先</th>
      <td>
        <%= @order.full_address %><br />
        <%= @order.name %>
      </td>
    </tr>
     <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method_i18n %></td>
    </tr>
     <tr>
      <th>注文ステータス</th>
      <td><%= @order.status_i18n %></td>
      <td><%= link_to "更新", admin_order_path(@order.id), method: :patch, class: 'btn btn-success' %></td>
    </tr>
  </tbody>
</table>

<div class="container">
  <div class="row">
    <div class="col-8">
      <table>
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>制作ステータス</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= (order_detail.price).to_s(:delimited) %></td>
              <td><%= order_detail.amount %></td>
              <td><%= ((order_detail.price)*order_detail.amount).floor.to_s(:delimited) %></td>
              <td><%= order_detail.making_status_i18n %></td>
              <td><%= link_to '更新', admin_order_order_detail_path(@order.id, order_detail.id), method: :patch, class: 'btn btn-success' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= @items_total.to_s(:delimited) %></td>
        </tr>
         <tr>
          <th>送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
         <tr>
          <th>請求金額合計</th>
          <td><%= @order.total_price.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
