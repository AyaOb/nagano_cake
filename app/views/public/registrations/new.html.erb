<div class="container">
  <div class="row pl-5">
    <h4 class="bg-light">新規会員登録</h4>
  </div>
  <div class="row">
    <%= form_with model:@customer, url:customer_registration_path, local:true do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <table>
        <tbody>
          <tr>
            <td><%= f.label :"名前" %></td>
            <td><%= f.label :"(姓)", class: 'mr-4' %><%= f.text_field :last_name, autofocus: true %></td>
            <td><%= f.label :"(名)", class: 'mr-4' %><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td><%= f.label :"フリガナ" %></td>
            <td><%= f.label :"(セイ)", class: 'mr-2' %><%= f.text_field :last_name_kana %></td>
            <td><%= f.label :"(メイ)", class: 'mr-2' %><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td><%= f.label :"メールアドレス" %></td>
            <td><%= f.email_field :email, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :"郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :postal_code %></td>
          </tr>
          <tr>
            <td><%= f.label :"住所" %></td>
            <td><%= f.text_field :address %></td>
          </tr>
          <tr>
            <td><%= f.label :"電話番号(ハイフンなし)" %></td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード(6文字以上)" %></td>
            <td>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :"パスワード(確認用)" %><br /></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "新規登録", class: 'btn btn-success px-5' %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
  <div class="row pl-5 mt-2">
    <h4 class="bg-light">既に登録済みの方</h4>
  </div>
  <div class="row pl-5 ml-5 mt-2">
    <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
  </div>
</div>

