<h2>新規会員登録</h2>

<%= form_with model:@customer, url:customer_registration_path, local:true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <div>
      <%= f.label :"名前" %>
    </div>
    <div>
      <%= f.label :"(姓)" %>
      <%= f.text_field :last_name, autofocus: true %>
    </div>
    <div>
      <%= f.label :"(名)" %>
      <%= f.text_field :first_name %>
    </div>
  </div>

  <div class="field">
    <div>
      <%= f.label :"フリガナ" %>
    </div>
    <div>
      <%= f.label :"(セイ)" %>
      <%= f.text_field :last_name_kana %>
    </div>
    <div>
      <%= f.label :"(メイ)" %>
      <%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class="field">
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div>
    <div>
      <%= f.label :"郵便番号(ハイフンなし)" %>
    </div>
    <div>
      <%= f.text_field :postal_code %>
    </div>
  </div>

  <div>
    <div>
      <%= f.label :"住所" %>
    </div>
    <div>
      <%= f.text_field :address %>
    </div>
  </div>

  <div>
    <div>
      <%= f.label :"電話番号(ハイフンなし)" %>
    </div>
    <div>
      <%= f.text_field :telephone_number %>
    </div>
  </div>

  <div class="field">
    <%= f.label :"パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :"パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<div>
  <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
</div>