<div class="container">
  <div class="row pl-5">
    <h4 class="bg-light">注文履歴詳細</h4>
  </div>
  <div class="row">
    <div class="col-5">
      <table>
        <tbody>
          <td>注文情報</td>
          <tr class="border border-dark">
            <th class="bg-light border-right border-dark pr-5">注文日</th>
            <td><%= l @order.created_at, format: :short %></td>
          </tr>
          <tr class="border border-dark">
            <th class="bg-light border-right border-dark pr-5">配送先</th>
            <td class="pr-5">〒<%= @order.postal_code %><br /><%= @order.address %><br /><%= @order.name %></td>
          </tr>
          <tr class="border border-dark">
            <th class="bg-light border-right border-dark pr-5">支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr class="border border-dark">
            <th class="bg-light border-right border-dark pr-5">ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-4">
      <table>
        <tbody>
          <td>請求情報</td>
          <tr class="border border-dark">
            <th class="bg-light">商品合計</th>
            <th class="bg-light border-right border-dark"></th>
            <td class="pr-5"><%= @total.to_s(:delimited) %></td>
          </tr>
          <tr class="border border-dark">
            <th class="bg-light">配送料</th>
            <th class="bg-light border-right border-dark"></th>
            <td class="pr-5"><%= @order.shipping_cost %></td>
          </tr>
          <tr class="border border-dark">
            <th class="bg-light">ご請求額</th>
            <th class="bg-light border-right border-dark"></th>
            <td class="pr-5"><%= @order.total_price.to_s(:delimited) %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-10">
      <table>
        <thead>
          <td>注文内容</td>
          <tr class="bg-light border border-dark">
            <th class="bg-light">商品</th>
            <th class="bg-light"></th>
            <th class="bg-light"></th>
            <th class="bg-light border border-dark">単価(税込)</th>
            <th class="bg-light border border-dark">数量</th>
            <th class="bg-light border border-dark pr-5">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr class="border border-dark">
              <td><%= order_detail.item.name %></td>
              <th></th>
              <th></th>
              <td class="border border-dark"><%= order_detail.price.to_s(:delimited) %></td>
              <td class="border border-dark"><%= order_detail.amount %></td>
              <td class="border border-dark pr-5"><%= order_detail.subtotal.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
    </div>
  </div>
</div>