<h2>注文情報入力</h2>
<%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>
  <div>
    <div>
      <%= f.label :"支払方法" %>
    </div>
    <div>
      <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
    </div>
    <div>
      <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
      <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
    </div>
  </div>
  <div>
    <div>
      <%= f.label :"お届け先" %>
    </div>
    <div>
      <div>
        <%= f.radio_button :select_address, "0" %>
        <%= f.label :select_address, "ご自身の住所" %>
      </div>
      <div>
        <%= current_customer.current_address %><br />
        <%= current_customer.full_name %>
      </div>
    </div>
    <div>
      <div>
        <%= f.radio_button :select_address, "1" %>
        <%= f.label :select_address, "登録済み住所から選択" %>
      </div>
      <div>
        <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses.all, :id, :full_address) %>
      </div>
    </div>
    <div>
      <%= f.radio_button :select_address, "2" %>
      <%= f.label :select_address, "新しいお届け先" %>
    </div>
    <%= render 'public/shared/address_form', f: f %>
    <div>
      <%= f.submit "確認画面へ進む", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>