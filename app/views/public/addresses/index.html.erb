<div class="container">
  <div class="row">
    <h4>配送先登録／一覧</h4>
  </div>
  <div class="row">
    <%= form_with model:@address, url:addresses_path, local:true do |f| %>
      <%= render 'public/shared/address_form', f: f %>
      <div class="text-right">
        <%= f.submit "新規登録", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <table>
      <thead>
        <th>郵便番号</th>
        <th>住所</th>
        <th>宛名</th>
        <th></th>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-success' %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class: 'btn btn-danger' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>




