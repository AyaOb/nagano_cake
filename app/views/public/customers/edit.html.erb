<div class="container">
  <div class="row pl-5">
    <h4 class="bg-light">会員情報編集</h4>
  </div>
  <div class="row pl-5">
    <%= form_with model:@customer, url:customers_update_path, local:true do |f| %>
      <table>
        <tbody>
          <%= render 'layouts/customer_form', f: f %>
          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", class: 'btn btn-success px-5' %></td>
            <td><%= link_to "退会する", customers_confirm_path, class: 'btn btn-danger' %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
