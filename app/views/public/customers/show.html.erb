<h2>マイページ</h2>
<h2>登録情報</h2>
<div><%= link_to "編集する", customers_edit_path %></div>
<table>
  <tbody>
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </tbody>
</table>
<div>
  <div>配送先</div>
  <div><%= link_to "一覧を見る", addresses_path %></div>
</div>
<div>
  <div>注文履歴</div>
  <div></div>
</div>
