<div class="container">
  <div class="row">
    <div class=col-3>

    </div>
    <div class=col-3>
      <%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "no_image.jpg", size: "230x150" %>
    </div>
    <div class=col-6>
      <h2><%= @item.name %></h2>
      <div><%= @item.introduction %></div>
      <div>￥<%= @item.with_tax_price.to_s(:delimited) %>(税込)</div>

      <%= form_with model: @cart_item, url: cart_items_path, local: true do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <%= f.select :amount, *[1..5] %>
        <%= f.submit "カートに入れる", class: 'btn btn-primary' %>
      <% end %>

    </div>
  </div>
</div>